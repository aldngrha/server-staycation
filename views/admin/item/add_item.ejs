<div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" placeholder="Enter title" required class="form-control">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="price" placeholder="Enter price" required class="form-control">
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" name="city" placeholder="Enter city" required class="form-control">
                </div>
                <div class="form-group">
                    <label for="categoryId">Category</label>
                    <select name="categoryId"class="form-control">
                        <option value="">--- Category ---</option>
                        <% for( let i = 0; i < category.length; i++ ) { %>
                            <option value="<%= category[i].id %> "><%= category[i].name %> </option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="image">Image</abel>
                    <input type="file" name="image" placeholder="Enter image" multiple required class="form-control">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="about" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>